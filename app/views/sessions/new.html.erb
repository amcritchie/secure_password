<%= form_for @user, url: sessions_path do |f| %>
    <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

    <ul>
      <li>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </li>
      <li>
        <%= f.label :password %>
        <%= f.text_field :password %>
      </li>
      <li>
        <%= f.submit "Sign In" %>
      </li>
    </ul>
<% end %>
